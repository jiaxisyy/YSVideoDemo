<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="tv_home_icon_text">
        <item name="android:layout_marginBottom">78px</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">#627281</item>
        <item name="android:textSize">38px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="iv_home_icon">

        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">98px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="tv_myself">

        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">40px</item>
        <item name="android:textColor">#627281</item>
        <item name="android:layout_marginLeft">60px</item>

    </style>

    <style name="tv_warning_listTitle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0px</item>
        <item name="android:textSize">36px</item>
        <item name="android:textColor">#627281</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="tv_warning_listItem">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0px</item>
        <item name="android:textSize">26px</item>
        <item name="android:textColor">#627281</item>
        <item name="android:gravity">center</item>

    </style>

</resources>
