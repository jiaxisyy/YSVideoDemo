<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_monitoring_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        >

        <TextView
            android:id="@+id/tv_monitoring_videoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tv_monitoring_video"
            android:textColor="#627281"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/iv_monitoring_videoNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="40px"
            android:src="@drawable/icon_monitoring_notice"
            />

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

    </android.support.design.widget.TabLayout>

    <SurfaceView
        android:layout_margin="20px"
        android:id="@+id/realplay_sv_video"
        android:layout_width="match_parent"
        android:layout_height="607px"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:background="@android:color/transparent"/>

</LinearLayout>